
@model  DAO.ViewModel.ListaCalificacionestudiantes
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("CalificacionesEstudiante", "CursoEstudiante", FormMethod.Post))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez



    if (BLL.Bll_Perfiles.VerificarPerfil(BLL.Enums.EnumPerfilesActivos.Permite_Acceder_Calificar_Estudiantes))
    {
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">

                        <div class="ibox-title">
                            <h5 align="center">Listado de Estudiantes Pertenecientes al Curso</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <i class="fa fa-wrench"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-user">
                                    <li>
                                        <a href="#">Config option 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Config option 2</a>
                                    </li>
                                </ul>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>

                            </div>
                            <br />
                            <div>
                            </div>
                        </div>


                        <div class="ibox-content">
                            <div class="table-responsive">

                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>
                                                # Documento
                                            </th>
                                            <th>
                                                Nombre Estudiante
                                            </th>
                                            <th>
                                                Nota 1
                                            </th>
                                            <th>
                                                Nota 2
                                            </th>
                                            <th>
                                                Nota 3
                                            </th>
                                            <th>
                                                Nota Final
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @for (int i = 0; i < Model.ListaCursoEstudiante.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(m => m.ListaCursoEstudiante[i].Personas.NumDocumento)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => m.ListaCursoEstudiante[i].Personas.NombreCompleto)
                                                    @Html.HiddenFor(m => m.ListaCursoEstudiante[i].CursoId)
                                                    @Html.HiddenFor(m => m.ListaCursoEstudiante[i].EstudianteId)
                                                    @Html.HiddenFor(m => m.ListaCursoEstudiante[i].CursoEstudianteId)
                                                </td>

                                                <td>
                                                    @Html.EditorFor(model => model.ListaCursoEstudiante[i].Nota1, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @min = 0, @max = 5, @Type = "number", @step = "0.1" } })
                                                </td>
                                                <td>
                                                    @Html.EditorFor(model => model.ListaCursoEstudiante[i].Nota2, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @min = 0, @max = 5, @Type = "number", @step = "0.1" } })
                                                </td>
                                                <td>
                                                    @Html.EditorFor(model => model.ListaCursoEstudiante[i].Nota3, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @min = 0, @max = 5, @Type = "number", @step = "0.1" } })
                                                </td>


                                                <td align="center">
                                                    @{ string color = "";
                                                        float Nota1, Nota2, Nota3, Final;

                                                        Nota1 = (float)(float.Parse(Model.ListaCursoEstudiante[i].Nota1) * 0.3);
                                                        Nota2 = (float)(float.Parse(Model.ListaCursoEstudiante[i].Nota2) * 0.3);
                                                        Nota3 = (float)(float.Parse(Model.ListaCursoEstudiante[i].Nota3) * 0.4);

                                                        Final = (Nota1 + Nota2 + Nota3);

                                                        if (Final < 2.96)
                                                        {
                                                            color = "#FE2E2E";
                                                        }
                                                        else
                                                        {
                                                            color = "#1ab394";
                                                        }
                                                    }
                                                    <FONT COLOR="@color">@Final</FONT>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>
                                                # Documento
                                            </th>
                                            <th>
                                                Nombre Estudiante
                                            </th>
                                            <th>
                                                Nota 1
                                            </th>
                                            <th>
                                                Nota 2
                                            </th>
                                            <th>
                                                Nota 3
                                            </th>
                                            <th>
                                                Nota Final
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>

                                <div id="CamposOcultosdeRespuesta" name="CamposOcultosdeRespuesta">

                                </div>

                                <div class="modal-footer">
                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="BotonCalificar" type="submit"><strong>Calificar</strong></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
}

<script src="~/Js_Utilidades/Validaciones/xxx.js"></script>

