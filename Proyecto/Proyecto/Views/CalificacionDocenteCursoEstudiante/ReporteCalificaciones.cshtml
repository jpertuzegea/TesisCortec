@model IEnumerable<DAO.ViewModel.ReportePreguntasByCurso>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <br>

    </div>

    <div class="col-lg-2">
    </div>
</div>

@if (BLL.Bll_Perfiles.VerificarPerfil(BLL.Enums.EnumPerfilesActivos.Permite_Acceder_Calificaciones_Del_Curso_y_Docente))
{
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 align="center">Analisis de Calificaciones del Curso</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>


                    <div class="ibox-content">
                        <div class="table-responsive">

                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>
                                            Pregunta
                                        </th>
                                        <th>
                                            % MuyBueno
                                        </th>
                                        <th>
                                            % Bueno
                                        </th>
                                        <th>
                                            % Regular
                                        </th>
                                        <th>
                                            % Malo
                                        </th>
                                        <th>
                                            % MuyMalo
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pregunta)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeMuyBueno)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeBueno)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeRegular)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeMalo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeMuyMalo)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            Pregunta
                                        </th>
                                        <th>
                                            % MuyBueno
                                        </th>
                                        <th>
                                            % Bueno
                                        </th>
                                        <th>
                                            % Regular
                                        </th>
                                        <th>
                                            % Malo
                                        </th>
                                        <th>
                                            % MuyMalo
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}