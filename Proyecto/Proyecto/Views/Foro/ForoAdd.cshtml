@model  DAO.Foro

@*<script src="~/Js_Utilidades/Validacion/NotasRapidas.js"></script>*@

@{
    Layout = null;
}

@using (Html.BeginForm("ForoAdd", "Foro", FormMethod.Post, new { onsubmit = "return  ValidarDobleCLicRegistrar()", enctype = "multipart/form-data" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez

  
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.CursoId, new { Value = ViewBag.CursoId });

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 style="color:#1ab394" class="modal-title">Formulario de Registro de Temas de Foro</h4>
        </div>

        <div class="modal-body">
            <div class="row">
                <div class="col-sm-6 b-r">
                    <h3 class="m-t-none m-b"></h3>

                    <div class="form-group">
                        <label>Tema</label>
                        @Html.EditorFor(model => model.Tema, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tema, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Descripcion</label>
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-sm-6 ">
                    <br><br>
                    <a href="#" class="pull-left">
                        <img src="~/Imagenes/areas.jpg" width="90%" alt="" />
                    </a>
                </div>
                <div class="col-sm-4 ">      </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="BotonRegistrar" type="submit"><strong>Registrar</strong></button>
        </div>
    }



