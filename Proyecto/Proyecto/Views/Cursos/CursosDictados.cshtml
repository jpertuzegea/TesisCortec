
@model IEnumerable<DAO.Cursos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <br>
        @*@if (PROYECTO_SIGECOR.Controllers.Utilidades.Funciones_Perfiles.Verificar_perfil((int)Session["id_usuario_sigecor"], 5))// 5 es poder ver el boton crear departamento
            {*@
        @*<a data-toggle="modal" class="btn btn-primary" onclick="CrearCurso()" id="btn_NuevoCurso" href="#myModal2">Nuevo Curso</a>*@
        @*}*@
    </div>

    <div class="col-lg-2">
    </div>
</div>

@*@if (PROYECTO_SIGECOR.Controllers.Utilidades.Funciones_Perfiles.Verificar_perfil((int)Session["id_usuario_sigecor"], 4))// 4 es poder listar los departamentos
    {*@
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 align="center">Listado de Cursos Dictados por :  <b><FONT COLOR="#1ab394"> [ @System.Web.HttpContext.Current.Session["NombreUsuarioTesis"] ]</FONT> </b>  </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>


                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Imagen Curso
                                    </th>
                                    <th>
                                        Nombre Curso
                                    </th>
                                    <th>
                                        # Estudiantes
                                    </th>
                                    <th>
                                        Estado Academico
                                    </th>
                                    <th>
                                        Estado
                                    </th>

                                    <th>
                                    </th>
                                    <th>
                                    </th>
                                    <th>
                                    </th>
                                    <th>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <img width="50" height="50" src="@Url.Action("MostrarImagenCurso", "Cursos", new { CursoId = item.CursoId})" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        colocar # @*@Html.DisplayFor(modelItem => item.TituloOtorgado)*@
                                    </td>
                                    <td>
                                        @{ string EstadoAcademico = "";
                                            if (item.EstadoAcademico == 0)
                                            {
                                                EstadoAcademico = "Ofertado";
                                            }
                                            else if (item.EstadoAcademico == 1)
                                            {
                                                EstadoAcademico = "Iniciado";
                                            }
                                            else if (item.EstadoAcademico == 2)
                                            {
                                                EstadoAcademico = "Pausado";
                                            }
                                            else if (item.EstadoAcademico == 3)
                                            {
                                                EstadoAcademico = "Cancelado";
                                            }
                                            else if (item.EstadoAcademico == 4)
                                            {
                                                EstadoAcademico = "Finalizado";
                                            }
                                        }
                                        @EstadoAcademico
                                    </td>
                                    <td>
                                        @{ string Estado = "Inactivo";
                                            if (item.Estado == 1)
                                            {
                                                Estado = "Activo";
                                            }
                                        }
                                        @Estado
                                    </td>

                                    <td>
                                        @Html.ActionLink(" ", "Index", "ForoTema", new { CursoId = item.CursoId }, new { @class = "fa fa-comments", @title = "Foro del Curso" })
                                    </td>

                                    <td>
                                        @Html.ActionLink(" ", "Index", "MaterialDidactico", new { CursoId = item.CursoId }, new { @class = "fa fa-book", @title = "Material Didactico" })
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "ListCronograma", "CronogramaActividades", new { CursoId = item.CursoId }, new { @class = "fa fa-calendar-o", @title = "Cronograma Actividades" })
                                    </td>
                                  
                                    <td>
                                        <a href="#" onclick="" title="Calificaciones" data-toggle="modal" id="@item.CursoId"><i class="fa fa-eye"></i></a>
                                    </td>

                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        Imagen Curso
                                    </th>
                                    <th>
                                        Nombre Curso
                                    </th>
                                    <th>
                                        # Estudiantes
                                    </th>
                                    <th>
                                        Estado Academico
                                    </th>
                                    <th>
                                        Estado
                                    </th>

                                    <th>
                                    </th>
                                    <th>
                                    </th>
                                    <th>
                                    </th>
                                    <th>
                                    </th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*}*@