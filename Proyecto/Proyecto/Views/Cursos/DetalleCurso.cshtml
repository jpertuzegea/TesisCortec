@model  DAO.Cursos

@{
    Layout = null;
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@Html.HiddenFor(model => model.CursoId)

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 style="color:#1ab394" class="modal-title">Detalles del Curso</h4>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-sm-6 b-r">
            <h3 class="m-t-none m-b"></h3>

            <div class="form-group" align ="center">
                <img width="150" height="150" src="@Url.Action("MostrarImagenCurso", "Cursos", new { CursoId =  Model.CursoId  })" />
            </div>

            <div class="form-group">
                <label>Nombre </label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = true } })
            </div>

            <div class="form-group">
                <label>Descripcion </label>
                @Html.TextArea("Descripcion", null, new { @class = "form-control", @onkeyup = "UpperCase(this)", @rows = "4", @disabled = true })
            </div>


        </div>
        <div class="col-sm-6 ">
            <br>
            <div class="form-group">
                <label>Titulo Otorgado</label>
                @Html.EditorFor(model => model.TituloOtorgado, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
            </div>
            <div class="form-group">
                <label>Valor Curso</label>
                @Html.EditorFor(model => model.ValorCurso, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
            </div>

            <div class="form-group">
                <label>Duracion Horas</label>
                @Html.EditorFor(model => model.DuracionHoras, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
            </div>

            <div class="form-group">
                <label>Docente</label>
                @Html.EditorFor(model => model.Docente, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
            </div>

        </div>
        <div class="col-sm-4 ">      </div>
    </div>
</div>

<div class="modal-footer">  

</div>
