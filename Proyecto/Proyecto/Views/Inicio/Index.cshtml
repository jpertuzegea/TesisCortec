@model IEnumerable<DAO.NotasRapidas>

<script src="~/Js_Utilidades/Modals.js"></script>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var xxx = true;
}

<audio src="~/Audios/BivienvenidaCortec.wav" autoplay></audio>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
            <div align ="center"> 
                <img alt="image" class="img-responsive" width="100%" height="100%" src="~/Imagenes/fondo.png">
            </div> 
        </div>
        <div class="col-lg-3">
        </div>


        @*estructura vacia del modal*@
        <div class="modal inmodal" id="MyModaInicio" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content animated flipInY">
                    <div id="ContentInicio">


                    </div>
                </div>
            </div>
        </div>


        @*@if (PROYECTO_SIGECOR.Controllers.Utilidades.Funciones_Perfiles.Verificar_perfil(1, 1))
            {*@

        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInUp">
                <ul class="notes">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div>
                                <small>@Html.DisplayFor(modelItem => item.FechaPublicacion)</small>
                                <h4>@Html.DisplayFor(modelItem => item.Titulo)</h4>
                                <p>@Html.DisplayFor(modelItem => item.Mensaje)</p>
                                <label>Usuario Publica : @Html.DisplayFor(modelItem => item.UsuarioPublica)</label>
                                <a href="#"><i class="fa fa-trash-o "></i></a>
                            </div>
                        </li>
                    }
                </ul>

            </div>
        </div>

        @*}*@

    </div>
</div>


@{ if (Proyecto.Models.Variables.Estado == 1)
    {
        <img onload="VisualizarInforme()" alt="image" class="img-responsive" width="1%" height="1%" src="~/Imagenes/fondo.png">
    }
}

