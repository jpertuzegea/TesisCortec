@model Proyecto.Models.PanelInformativo

<script src="~/Js_Utilidades/Validacion/NotasRapidas.js"></script>

@{
    Layout = null;
}

@using (Html.BeginForm("PanelInformativoUpdt", "NotasRapidas", FormMethod.Post, new { onsubmit = "return  ValidarDobleCLicModificar()", enctype = "multipart/form-data" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 style="color:#1ab394" class="modal-title">Formulario de Modificacion de Panel Informativo</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>

                <div class="form-group">
                    <label>Foto Actual</label>
                    <img class="img-responsive" width="250" height="250" src="@Url.Action("ConvertirImagen", "Personas", new { PersonaId =  0})" />
                </div>

                <div class="form-group">
                    <label>Imagen</label>
                    <input class="form-control m-b" requerid type="file" id="file" name="file" />
                </div>

                <div class="form-group">
                    <label>Estado </label>
                    @Html.DropDownList("Estado", null, "Seleccione una opcion", htmlAttributes: new { @class = "form-control" })
                </div>

            </div>
            <div class="col-sm-6 ">
                <br><br>
                <a href="#" class="pull-left">
                    <img src="~/Imagenes/areas.jpg" width="90%" alt="" />
                </a>
            </div>
            <div class="col-sm-4 ">      </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="BotonModificar" type="submit"><strong>Modificar</strong></button>
    </div>
}




