@model  DAO.SistemaCorreo
 

@using (Html.BeginForm("EnviarCorreo", "SistemaDeCorreo", FormMethod.Post))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="col-lg-9 animated fadeInRight">
        <div class="mail-box-header">
            <div class="float-right tooltip-demo">
            </div>
            <h2>
                Nuevo Mensaje de Correo
            </h2>
        </div>
        <div class="mail-box">


            <div class="mail-body">


                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Para:</label>

                    <div class="col-sm-10">
                        @Html.DropDownList("DestinoId", null, "Seleccione una opcion", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Asunto:</label>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Asunto, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mensaje:</label>
                    <div class="col-sm-10">
                        @Html.TextArea("Mensaje", null, new { @class = "form-control", @onkeyup = "UpperCase(this)", @rows = "4" })
                    </div>
                </div>

            </div>

            <div>
                <div class="note-editor note-frame card">
                    <div class="note-dropzone">

                    </div>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="BotonEnviarCorreo" type="submit"><strong><i class="fa fa-reply"></i> Enviar</strong></button>
            </div>

            <div class="clearfix"></div>
        </div>
    </div>
}