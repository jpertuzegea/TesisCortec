@model  DAO.ParticipacionEnForoTema

@*<script src="~/Js_Utilidades/Validacion/NotasRapidas.js"></script>*@

@{
    Layout = null;
}

@using (Html.BeginForm("ParticiparEnForoTemaAdd", "ParticipacionEnForoTema", FormMethod.Post, new { onsubmit = "return  ValidarDobleCLicRegistrar()" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ForoTemaId, new { Value = ViewBag.ForoTemaId });

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 style="color:#1ab394" class="modal-title">Formulario de Participacion En El Foro</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>

                <input id="DocenteId" name="DocenteId" type="hidden" class="form-control" value="@ViewBag.DocenteId">
                <input id="NombreCurso" name="NombreCurso" type="hidden" class="form-control" value="@ViewBag.Curso">
                <input id="Tema" name="Tema" type="hidden" class="form-control" value="@ViewBag.Tema">
                <input id="NombreDocente" name="NombreDocente" type="hidden" class="form-control" value="@ViewBag.Docente">

                <div class="form-group">
                    <label>Curso </label>
                    <input id="Curso" name="Curso" type="text" class="form-control" value="@ViewBag.Curso" disabled>
                </div>

                <div class="form-group">
                    <label>Tema </label>
                    <input id="Temax" name="Temax" type="text" class="form-control" value="@ViewBag.Tema" disabled>
                </div>

                <div class="form-group">
                    <label>Docente </label>
                    <input id="Docente" name="Docente" type="text" class="form-control" value="@ViewBag.Docente" disabled>
                </div>

                <div class="form-group">
                    <label>Mensaje </label>
                    @Html.TextArea("Mensaje", null, new { @class = "form-control", @onkeyup = "UpperCase(this)", @rows = "4" })
                    @Html.ValidationMessageFor(model => model.Mensaje, "", new { @class = "text-danger" })
                </div>



            </div>
            <div class="col-sm-6 ">
                <br><br>
                <a href="#" class="pull-left">
                    <img src="~/Imagenes/areas.jpg" width="90%" alt="" />
                </a>
            </div>
            <div class="col-sm-4 ">      </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="BotonRegistrar" type="submit"><strong>Registrar</strong></button>
    </div>
}




