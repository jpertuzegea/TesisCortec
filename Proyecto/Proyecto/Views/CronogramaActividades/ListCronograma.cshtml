@model IEnumerable<DAO.CronogramaActividadesCurso>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <br>
        @*@if (PROYECTO_SIGECOR.Controllers.Utilidades.Funciones_Perfiles.Verificar_perfil((int)Session["id_usuario_sigecor"], 5))// 5 es poder ver el boton crear departamento
            {*@
        <a data-toggle="modal" class="btn btn-primary" onclick="CrearActividadCronograma(@ViewBag.CursoId)" id="btn_NuevaNotaRapida" href="#myModal2">Nueva Actividad</a>
        @*}*@
    </div>

    <div class="col-lg-2">
    </div>
</div>

@*@if (PROYECTO_SIGECOR.Controllers.Utilidades.Funciones_Perfiles.Verificar_perfil((int)Session["id_usuario_sigecor"], 4))// 4 es poder listar los departamentos
    {*@
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 align="center">Listado Actividades</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>


                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre Actividad
                                    </th>
                                    <th>
                                        Fecha Actividad
                                    </th>
                                    <th>
                                        Fecha Publicacion
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreActividad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaActividad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaPublicacion)
                                    </td>
                                    <td>
                                        @{ string Estado = "Inactivo";
                                            if (item.Estado == 1)
                                            {
                                                Estado = "Activo";
                                            }
                                        }
                                        @Estado
                                    </td>
                                    <td>
                                        <a href="#myModal2" onclick="ModificarCronogramaActividadesCurso(this.id)" data-toggle="modal" id="@item.CronogramaActividadesCursoId"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        Nombre Actividad
                                    </th>
                                    <th>
                                        Fecha Actividad
                                    </th>
                                    <th>
                                        Fecha Publicacion
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*}*@