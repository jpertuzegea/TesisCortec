@model IEnumerable<DAO.Personas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <br>
        @*@if (PROYECTO_SIGECOR.Controllers.Utilidades.Funciones_Perfiles.Verificar_perfil((int)Session["id_usuario_sigecor"], 5))// 5 es poder ver el boton crear departamento
            {*@
        <a data-toggle="modal" class="btn btn-primary" onclick="RegistrarPersona()" id="Btn_NuevaPersona" href="#myModal2">Nueva Persona</a>
        @*}*@
    </div>

    <div class="col-lg-2">
    </div>
</div>

@*@if (PROYECTO_SIGECOR.Controllers.Utilidades.Funciones_Perfiles.Verificar_perfil((int)Session["id_usuario_sigecor"], 4))// 4 es poder listar los departamentos
    {*@
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 align="center">Listado de Personas Activas Existentes en el Sistema</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>


                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Tipo Documento
                                    </th>
                                    <th>
                                        Num Documento
                                    </th>
                                    <th>
                                        Nombre Complpeto
                                    </th>
                                    <th>
                                        Codigo Institucional
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Ciudad
                                    </th>
                                    <th>
                                        Direccion
                                    </th>
                                    <th>
                                        Telefono
                                    </th>
                                    <th>
                                        Fecha Ingreso
                                    </th>
                                    <th>
                                        Estado
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TipoDocumento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumDocumento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CodigoInstitucional)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ciudad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Direccion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaIngreso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estado)
                                        </td>
                                        <td>
                                            <a href="#myModal2" onclick="ModificarPersona(this.id)" data-toggle="modal" id="@item.PersonaId"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        Tipo Documento
                                    </th>
                                    <th>
                                        Num Documento
                                    </th>
                                    <th>
                                        Nombre Complpeto
                                    </th>
                                    <th>
                                        Codigo Institucional
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Ciudad
                                    </th>
                                    <th>
                                        Direccion
                                    </th>
                                    <th>
                                        Telefono
                                    </th>
                                    <th>
                                        Fecha Ingreso
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
